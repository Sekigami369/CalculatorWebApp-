@model CalcModel

@{
    ViewBag.Title = "電卓";
}

<h2>電卓</h2>

@using (Html.BeginForm("Calculate", "CalcController", FormMethod.Post))
{
    <input asp-for="number1" placeholder="数値1" />
    <input asp-for="number2" placeholder="数値2" />
    <select name="operation">
        <option value = "Add">＋</option>
        <option value = "Subtract">－</option>
        <option value = "Multiply">×</option>
        <option value = "Divide">÷</option>
    </select>
    <input type="submit" value="計算" />
}
@if (Model.result != null)
{
    <p>結果: @Model.result</p>
}
else
{
    <p>結果：計算結果がありません。</p>
}
